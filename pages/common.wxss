.list-container{
  background: #ebebeb;  
  padding: 35rpx 35rpx;
}
.list-item{
  background: #fff;
  padding: 15rpx;
  margin-bottom: 15rpx;
}
.list-item-head{
  padding: 15rpx 0 25rpx 0;
}
.list-item-head image{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
   vertical-align: middle;
}
.list-item-head text{
  font-size: 28rpx;
  color: #999;
  font-weight: bold;
}
.list-item-img image{
  width: 100%;
  height: 380rpx;
}
.list-item-introduce{
  padding: 25rpx;
  font-size: 38rpx;
}
.list-item-bottom {
  padding: 25rpx;
  display: flex;
  justify-content: space-between;
}
.list-item-bottom text{
  border: 1px solid black;
  font-size: 28rpx;
  padding: 10rpx 20rpx;
}
.list-item-bottom view{
 display: inline-block;
 margin-left: 20rpx;
}
.btn{
    background: transparent;
    width:50rpx;
    height: 50rpx; 
    padding: 0 0 20rpx 0;
}
.btn::after{
  border:none;
}
.list-item-bottom view image{
  width:50rpx;
  height: 50rpx; 
}
